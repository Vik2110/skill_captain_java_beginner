#include <stdio.h>
#include <iostream>

using namespace std;

int main () {

    int number;

    do {

        cout << "Enter a number between 1 and 10: ";
        cin >> number;

        if (number >= 1 && number <=10) {
            cout << "You entered " << number << endl;
            break;
        } else {
            cout << "The number entered was out of bounds, please try again." << endl;
            continue;
        }

    } while (true);

    int counter(1);
    cout << endl;

    while(counter <= 20) {

        cout << counter << " ";
        counter++;
    }

    cout << endl;

    for (int i = 1; i <= 10; i++ ) {
        cout << i << "    ";
    }
    cout << endl;


    return 0;
}
