package com.hello;

//This program takes 2 numbers from the user -  num1 and num2
//and outputs the larger of the two numbers

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter number 1: ");
        int num1 = scanner.nextInt();

        System.out.print("Enter number 2: ");
        int num2 = scanner.nextInt();

        if ( num1 == num2 ) {
            System.out.println("Both the numbers are same!");
        } else if ( num1 > num2) {
            System.out.println(num1 + " is the greater of the two!");
        } else {
            System.out.println(num2 + " is the greater of the two!");
        }

        scanner.close();


    }
}
